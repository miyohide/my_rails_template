<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_pack_tag 'application' %>
  </head>

  <body>

    <div class="container-fluid">
      <div id="nav">
        <% if current_user %>
          <%= link_to "Edit Profile", edit_user_path(current_user.id), class: "btn btn-warning btn-sm" %>
          <%= link_to "Logout", :logout, method: :delete, class: "btn btn-danger btn-sm" %>
        <% else %>
          <%= link_to "Register", new_user_path, class: "btn btn-primary btn-sm" %>
          <%= link_to "Login", :login, class: "btn btn-success btn-sm" %>
        <% end %>
      </div>
      <% flash.each do |name, message| %>
        <div class="alert alert-<%= name %>"><%= message %></div>
      <% end %>

      <%= yield %>
    </div>
    <%= javascript_pack_tag js_path %>
  </body>
</html>
